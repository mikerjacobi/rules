package doit.doit;

import doit.doit.Idea;

rule "reward is 1"
    when
        Idea(reward == 1)
        $i : Idea( )

    then
        i.doit.doit.Idea( )setShouldDoIt(true);
        System.out.println("reward is 1!!");
end

rule "reward is NOT 1"
    when
        Idea($reward : reward)
        Idea($reward != 1)
    then
        System.out.println("reward is NOT 1, it is: " + $reward);


end