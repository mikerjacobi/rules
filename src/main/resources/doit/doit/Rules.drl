package doit.doit;

import doit.doit.Idea;

rule "reweard is 1"
    when
        i : Idea()
        Idea(reward == 1)
    then
        i.setShouldDoIt(true);
        System.out.println("reward is 1!!");
end

rule "reweard is NOT 1"
    when
        Idea($reward : reward)
        Idea($reward != 1)
    then
        System.out.println("reward is NOT 1, it is: " + $reward);


end