package doit.doit;

import doit.doit.Idea;
global Results results;

rule "reward is 1"
    when
        $i : Idea(reward == 1)
    then
        results.setScore(5);
        $i.setShouldDoIt(true);
        System.out.println("reward is 1!!");
end

rule "reward is NOT 1"
    when
        $i : Idea($reward : reward != 1)
    then
        $i.setShouldDoIt(false);
        System.out.println("reward is NOT 1, it is: " + $reward);


end